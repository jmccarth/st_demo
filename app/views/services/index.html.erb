<h1>Listing services</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Servicetype</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Cost</th>
        <th>Amount Paid</th>
        <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.user_id %></td>
        <td><%= ServiceType.find(service.servicetype_id).name %></td>
        <td><%= service.startdate %></td>
        <td><%= service.enddate %></td>
        <td><%= service.cost %></td>
          <td><%= service.get_payment_total %></td>
          <td><%= service.get_balance %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>